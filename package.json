{
  "name": "bluprint",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2",
    "@types/yargs": "^17.0.35"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "dev": "bun src/index.ts",
    "format": "prettier \"src/**/*.{ts,tsx,js,jsx,json,md}\" --write",
    "format:check": "prettier \"src/**/*.{ts,tsx,js,jsx,json,md}\" --check"
  },
  "bin": {
    "bluprint": "src/index.ts"
  },
  "dependencies": {
    "yargs": "^18.0.0",
    "neverthrow": "^8.2.0"
  }
}
